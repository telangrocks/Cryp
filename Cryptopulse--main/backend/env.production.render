# Encryption
ENCRYPTION_KEY=351d82b45bcc2d9fc19fd9c46eea8006239c9ff578e7306abb6c970fd35ae919
CSRF_SECRET=c0298a34a1cafe812fe04b7a56669016faf697cfce454a7af7a6c37388aea28a
SESSION_SECRET=a140f6b13edc1a055069ffde09e96e23d60fe826d53e8b4cf600e8580df91059

# =========================================================================
# Exchange API Configuration
# =========================================================================
# Binance
BINANCE_API_KEY=${BINANCE_API_KEY}
BINANCE_SECRET_KEY=${BINANCE_SECRET_KEY}
BINANCE_TESTNET=false

# WazirX
WAZIRX_API_KEY=${WAZIRX_API_KEY}
WAZIRX_SECRET_KEY=${WAZIRX_SECRET_KEY}

# CoinDCX
COINDCX_API_KEY=${COINDCX_API_KEY}
COINDCX_SECRET_KEY=${COINDCX_SECRET_KEY}

# Delta
DELTA_API_KEY=${DELTA_API_KEY}
DELTA_SECRET_KEY=${DELTA_SECRET_KEY}

# Coinbase
COINBASE_API_KEY=${COINBASE_API_KEY}
COINBASE_SECRET_KEY=${COINBASE_SECRET_KEY}
COINBASE_PASSPHRASE=${COINBASE_PASSPHRASE}

# =========================================================================
# Payment Configuration
# =========================================================================
CASHFREE_CLIENT_ID=${CASHFREE_CLIENT_ID}
CASHFREE_SECRET_KEY=${CASHFREE_SECRET_KEY}
CASHFREE_ENV=production
CASHFREE_WEBHOOK_SECRET=${CASHFREE_WEBHOOK_SECRET}
CASHFREE_BASE_URL=https://api.cashfree.com

# =========================================================================
# URLs and CORS Configuration
# =========================================================================
FRONTEND_URL=https://cryptopulse-frontend.onrender.com
BACKEND_URL=https://cryptopulse-backend.onrender.com
CLOUD_URL=https://cryptopulse-cloud.onrender.com

# CORS
ALLOWED_ORIGINS=https://cryptopulse-frontend.onrender.com,https://cryptopulse-backend.onrender.com,https://cryptopulse-cloud.onrender.com
CORS_ORIGIN=https://cryptopulse-frontend.onrender.com

# =========================================================================
# Monitoring and Logging
# =========================================================================
LOG_LEVEL=info
ENABLE_MONITORING=true
ENABLE_TRACING=true
ENABLE_ANALYTICS=true

# Slack (Optional)
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}

# =========================================================================
# Rate Limiting and Security
# =========================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true

# =========================================================================
# WebSocket Configuration
# =========================================================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=8080
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_MESSAGE_RATE_LIMIT=100
WEBSOCKET_HEARTBEAT_INTERVAL=30000
WEBSOCKET_MAX_MESSAGE_SIZE=1048576

# =========================================================================
# Feature Flags
# =========================================================================
ENABLE_DEBUG=false
ENABLE_MOCK_DATA=false
CLUSTER_MODE=true

# =========================================================================
# Performance Configuration
# =========================================================================
MAX_MEMORY_USAGE=80
MAX_CPU_USAGE=80
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
