# =============================================================================
# CryptoPulse Frontend - Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control!

# ================================
# Application Configuration
# ================================
NODE_ENV=production
PORT=10000

# Node.js memory optimization
NODE_OPTIONS="--max-old-space-size=512"

# ================================
# Build Configuration
# ================================
VITE_APP_NAME=CryptoPulse
VITE_APP_VERSION=2.0.0
VITE_BUILD_TARGET=production
VITE_ENABLE_SOURCEMAPS=false
VITE_MINIFY=true
VITE_DEBUG_MODE=false

# ================================
# API Configuration
# ================================
# Backend API URL - REQUIRED
VITE_API_BASE_URL=https://your-backend-api.com

# API timeouts and retries
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# ================================
# Security & Encryption
# ================================
# CRITICAL: Generate a secure 32+ character random string
# Use: openssl rand -hex 32
VITE_ENCRYPTION_KEY=CHANGE_ME_TO_A_SECURE_RANDOM_32_CHAR_STRING

# ================================
# Feature Flags
# ================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_PWA=true

# ================================
# Performance & Optimization
# ================================
VITE_ENABLE_COMPRESSION=true
VITE_CHUNK_SIZE_WARNING_LIMIT=1000
VITE_ENABLE_CODE_SPLITTING=true

# ================================
# Trading Configuration
# ================================
VITE_DEFAULT_TRADING_PAIR=BTC/USDT
VITE_DEFAULT_EXCHANGE=binance
VITE_DEFAULT_THEME=system
VITE_DEFAULT_CURRENCY=USD
VITE_CHART_REFRESH_INTERVAL=5

# ================================
# Monitoring & Analytics
# ================================
# Sentry (Error Tracking)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# Google Analytics
VITE_GA_TRACKING_ID=

# Mixpanel
VITE_MIXPANEL_TOKEN=

# ================================
# External Services
# ================================
# WebSocket URL (if different from API)
VITE_WEBSOCKET_URL=wss://your-websocket-url.com

# CDN URL (optional)
VITE_CDN_URL=

# ================================
# Security Headers (for server.cjs)
# ================================
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ================================
# Logging
# ================================
VITE_LOG_LEVEL=error
VITE_ENABLE_CONSOLE_LOGS=false

# ================================
# Cache Configuration
# ================================
VITE_CACHE_MAX_AGE=31536000
VITE_ENABLE_SERVICE_WORKER_CACHE=true

# ================================
# Development Overrides (optional)
# ================================
# These are ignored in production but useful for staging
VITE_STAGING_MODE=false
VITE_MOCK_API=false

