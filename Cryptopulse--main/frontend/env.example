# Environment Configuration
NODE_ENV=production
PORT=10000

# Memory Management
NODE_OPTIONS=--max-old-space-size=460

# API Configuration
VITE_API_BASE_URL=${API_BASE_URL}
VITE_PRODUCTION_API_URL=${PRODUCTION_API_URL}
VITE_APP_NAME=CryptoPulse
VITE_APP_VERSION=2.0.0
VITE_ENCRYPTION_KEY=GENERATE_SECURE_KEY_AT_RUNTIME
VITE_ENABLE_SOURCEMAPS=false
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# External API URLs
VITE_DEFAULT_COINGECKO_URL=${DEFAULT_COINGECKO_URL}
VITE_DEFAULT_NEWS_URL=${DEFAULT_NEWS_URL}
