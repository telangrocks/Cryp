# =============================================================================
# Frontend-specific pnpm configuration
# =============================================================================

# Inherit from root but with frontend-specific settings

# Use hoisted for Vite compatibility
node-linker=hoisted
shamefully-hoist=true

# Auto install peers for React ecosystem
auto-install-peers=true

# Network settings for CI/CD
network-timeout=60000
fetch-retries=5

# Show progress
progress=true

